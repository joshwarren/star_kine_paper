keywords = {ic1459,ic4296,ngc1316,ngc1399,ngc3557},
mendeley-tags = {ic1459,ic4296,ngc1316,ngc1399,ngc3557},
month = {may},
title = {{The accretion mechanism in low-power radio galaxies}},
