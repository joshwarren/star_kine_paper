journal = {Monthly Notices of the Royal Astronomical Society},
month = {jan},
number = {3},
pages = {513--530},
title = {{The SAURON project - II. Sample and early results}},
url = {http://mnras.oxfordjournals.org/content/329/3/513.abstract?sid=ee46961b-7180-4431-8c6a-214317888533},
