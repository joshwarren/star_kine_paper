@phdthesis{Ogando2007,
abstract = {Early-type galaxies (E and S0) are cornerstones in the study of galaxy formation and evolution as their stellar populations provide strong constraints on these processes, specially when associated to its mass and environment. In order to do this kind of study we used spectroscopic observations carried out at the 1.52 m ESO telescope for a sample of 509 early-type galaxies. We performed two types of spectra extraction: one takes into account most of the light of the galaxy, and is refered as global extraction; the other one consists of several contiguous, and small extractions along the major axis of the galaxy to allow gradient studies for a sub-sample of 137 galaxies. We measured several indices in the Lick system and using the SSP model of Thomas et al. (2003) we determine ages and metallicities. Examining the index-$\sigma$0 relation, we do not find any significant difference for it, taking into account distinct morphologies and environments. The slope of this relation seems to be chiefly caused by variation of metallicity, and secondarily by [$\alpha$/Fe] and age. We also find a correlation between residuals of this relation with the H$\beta$ index, an age indicator, however the residuals for Mg and Fe indexes show different behaviors with H$\beta$. This suggests that variation in [$\alpha$/Fe] ratio also plays a role in the scatter of the index-$\sigma$0 relation, rather than age alone. Examining the parameters obtained from SSP models and how it relate to mass ($\sigma$0), we find that low mass galaxies viii present [Z/H], ages and [$\alpha$/Fe] values, on average, smaller than that of massive objects, confirming what is generally known as the downsizing effect. No clear effects of distinct morphologies and environments are reported on the relations between age, [Z/H], and [$\alpha$/Fe] with mass. Average values of ∆I are similar for both morphological types and environments, nevertheless, their distributions are not. The ∆I-$\sigma$0 or ∆[Z/H]-$\sigma$0 do not depend on morphology or surroundings, and also do not show correlation with $\sigma$0. Also, ∆T and ∆[$\alpha$/Fe] show no significant correlation with $\sigma$0, and have a distribution consistent with a null average. The above evidences favours both scenarios, Monolithic Dissipative Collapse and Hierarchical Clustering, so we may consider a unified scenario for galaxy formation where in a clustering scenery, galaxies can form rapidly as in a monolithic dissipative like process.},
author = {Ogando, Ricardo},
keywords = {ic1459,ic4296,ngc1399,ngc3100,ngc3557,ngc7075},
mendeley-tags = {ic1459,ic4296,ngc1399,ngc3100,ngc3557,ngc7075},
school = {Universidade Federal do Rio de Janeiro},
title = {{Study of Stellar Populations in Early-Type Galaxies}},
url = {http://staff.on.br/ogando/ogando{\_}thesis2007.pdf},
year = {2007}
}
