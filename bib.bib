eprint = {0803.1483},
issn = {0067-0049},
journal = {The Astrophysical Journal Supplement Series, Volume 177, Issue 2, article id. 446-464,  pp. (2008).},
keywords = {galaxies: abundances,galaxies: star clusters,methods: data analysis},
month = {mar},
title = {{Measuring Ages and Elemental Abundances from Unresolved Stellar Populations: Fe, Mg, C, N, and Ca}},
