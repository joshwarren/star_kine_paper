author = {Sanchez-Blazquez, P. and Rosales-Ortega, F. and Mendez-Abreu, J. and Perez, I. and Sanchez, S. F. and Zibetti, S. and Aguerri, A. and Bland-Hawthorn, J. and Catalan, C. and Fernandes, R. Cid and de Amorim, A. and de Lorenzo-Caceres, A. and Falcon-Barroso, J. and Galazzi, A. and Benito, R. Garcia and de Paz, a. Gil and Delgado, R. Gonzalez and Husemann, B. and Iglesias-Paramo, Jorge and Jungwiert, B. and Marino, R. a. and Marquez, I. and Mast, D. and Mendoza, M. a. and Molla, M. and Papaderos, P. and Ruiz-Lara, T. and van de Ven, G. and Walcher, C. J. and Wisotzki, L.},
